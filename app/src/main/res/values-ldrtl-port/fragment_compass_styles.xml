<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="lyt_compass_container" parent="lyt_compass_container_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="lyt_compass_shadow" parent="lyt_compass_shadow_common">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="lyt_line_qibla_container" parent="lyt_line_qibla_container_common">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_below">@id/lyt_compass_shadow</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="lyt_txt_angle_container" parent="lyt_txt_angle_container_common">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="lyt_txt_qibla_container" parent="lyt_txt_qibla_container_common">
        <item name="android:layout_toRightOf">@id/lyt_txt_angle_container</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>