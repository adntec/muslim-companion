<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="lyt_compass_container" parent="lyt_compass_container_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="lyt_compass_shadow" parent="lyt_compass_shadow_common">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="lyt_line_qibla_container" parent="lyt_line_qibla_container_common">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_toRightOf">@id/lyt_compass_shadow</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="lyt_txt_angle_container" parent="lyt_txt_angle_container_common">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_below">@id/lyt_txt_qibla_container</item>
    </style>

    <style name="lyt_txt_qibla_container" parent="lyt_txt_qibla_container_common">
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>